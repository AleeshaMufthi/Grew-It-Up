    <script>

        document.addEventListener("DOMContentLoaded", function () {
          const searchInput = document.getElementById("searchInput");
          const productGrid = document.getElementById("productGrid");
          const products = productGrid.getElementsByClassName("col-lg-3"); // Assuming each card is within a div with class "col-lg-4"
      
          searchInput.addEventListener("input", function () {
              const searchText = searchInput.value.toLowerCase();
      
              for (let i = 0; i < products.length; i++) {
                  const productName = products[i].querySelector("h2 a").textContent.toLowerCase();
      
                  if (!searchText || productName.includes(searchText)) {
                      products[i].style.display = "";
                  } else {
                      products[i].style.display = "none";
                  }
              }
          });
      });
          
